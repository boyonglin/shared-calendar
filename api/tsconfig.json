{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["./**/*.ts", "../shared/**/*.ts", "../server/src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
