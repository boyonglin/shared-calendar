{
  "name": "shared-calendar",
  "version": "1.0.0",
  "type": "module",
  "description": "Shared calendar application - monorepo",
  "private": true,
  "engines": {
    "node": "24.x"
  },
  "workspaces": [
    "shared",
    "client",
    "server",
    "api"
  ],
  "scripts": {
    "dev": "concurrently -k -n \"CLIENT,SERVER\" -c \"cyan.bold,green.bold\" \"npm run dev --workspace=client\" \"npm run dev --workspace=server\"",
    "build": "npm run build --workspaces",
    "build:vercel": "npm run build --workspace=client",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "calendar",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@libsql/client": "^0.15.15",
    "@swc/core-linux-x64-gnu": "^1.15.3",
    "@types/jsonwebtoken": "^9.0.10",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.0.0",
    "form-data": "^4.0.1",
    "googleapis": "^166.0.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-ical": "^0.22.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "tsdav": "^2.1.6",
    "uuid": "^11.0.3",
    "zod": "^3.23.8"
  }
}
