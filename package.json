{
  "name": "shared-calendar",
  "version": "1.0.0",
  "type": "module",
  "description": "Shared calendar application - monorepo",
  "private": true,
  "engines": {
    "node": "24.x"
  },
  "workspaces": [
    "shared",
    "client",
    "server",
    "api"
  ],
  "scripts": {
    "dev": "concurrently -k -n \"CLIENT,SERVER\" -c \"cyan.bold,green.bold\" \"npm run dev --workspace=client\" \"npm run dev --workspace=server\"",
    "build": "npm run build --workspaces",
    "build:vercel": "npm run build --workspace=client",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "calendar",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@swc/core-linux-x64-gnu": "^1.15.3",
    "form-data": "^4.0.1"
  }
}
